    <!--    
    java -Dfile.encoding=utf-8 -jar xcplus-checkcode-0.0.1-SNAPSHOT.jar
    -->
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-maven-plugin</artifactId>
                </plugin>
                <plugin>
                    <groupId>com.spotify</groupId>
                    <artifactId>dockerfile-maven-plugin</artifactId>
                    <version>${dockerfile-maven-plugin.version}</version>
                    <executions>
                        <execution>
                            <id>default</id>
                            <phase>package</phase>
                            <goals>
                                <goal>build</goal>
                                <goal>push</goal>
                            </goals>
                        </execution>
                    </executions>
                    <!--  本机需设置环境变量 DOCKER_HOST tcp://centos006:1027 -->
                    <configuration>
                        <contextDirectory>${project.basedir}</contextDirectory>
                        <!--  docker.registry 与 maven settings.xml 中<servers>下的定义的<server>id一致 ，认证信息在 <servers>下定义-->
                        <repository>${docker.registry}/${docker.registry.image.dir}/${project.artifactId}</repository>
                        <tag>${project.version}</tag>
                        <useMavenSettingsForAuth>true</useMavenSettingsForAuth>
                        <buildArgs>
                            <JAR_FILE>${project.build.finalName}.jar</JAR_FILE>
                        </buildArgs>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
